<div class="container">
    <div class="col-sm-6">
        <div class="image">
            <img src="" alt="">
        </div>
    </div>
    <div class="contact-form">
        <h1>Reach out to us!</h1>
        <p>Enter your information if you're interested to learn more!</p>
        <form action="/contact" method="POST">
            <label for="first_name">First Name</label>
            <input type="text" id="first_name" name="first_name" placeholder="Jose" pattern="[a-zA-Z]" required>
            <br>

            <label for="last_name">Last Name</label>
            <input type="text" id="last_name" name="last_name" placeholder="Ramirez" pattern="[a-zA-Z]" required>
            <br>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="jose.ramirez@email.com" required>
            <br>

            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone" placeholder="(000)-000-0000" pattern="([0-9]{3})-[0-9]{3}-[0-9]{4}" required>
            <br>

            <label for="message">Message</label>
            <textarea id="message" name="message" rows="4" cols="50" placeholder="Write us a message!" required></textarea>
            <br>

            <div class="form-buttons">
                <button type="submit">Send</button>
                <button type="reset">Reset</button>
            </div>
        </form>
    </div>

</div>