<div class="container main-content">
  <div class="col-sm-10 mx-auto text-center">
    <h1>Course Info for <%= course.title %></h1>
    <table
      class="col-sm-10 mx-auto table table-success table-striped table-hover"
    >
      <tbody>
        <tr>
          <td class="text-right">Tile:</td>
          <td><%= course.title %></td>
        </tr>
        <tr>
          <td class="text-right">Description:</td>
          <td><%= course.description %></td>
        </tr>
        <tr>
          <td class="text-right">Instructor:</td>
          <td><%= course.instructor %></td>
        </tr>
        <tr>
          <td class="text-right">Cost:</td>
          <td><%= course.cost %></td>
        </tr>
        <tr>
          <td class="text-right">Max # of students:</td>
          <td><%= course.maxStudents %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
