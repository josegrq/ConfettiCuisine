<div class="container main-content">
  <div class="col-sm-12">
    <div class="image text-center">
      <img
        class="rounded img-fluid"
        src="http://localhost:3000/images/join.jpeg"
        alt="social gathering"
      />
    </div>
  </div>
  <br />
  <div class="col-sm-6 mx-auto text-center">
    <h1>Join our team!</h1>
    <p>Enter your information below!</p>
    <form action="/signUp" method="POST">
      <div class="form-group row">
        <input
          class="col-sm-12 form-control mx-auto"
          type="text"
          id="first_name"
          name="first_name"
          placeholder="First Name"
          required
        />
      </div>
      <div class="form-group row">
        <input
          class="col-sm-12 form-control mx-auto"
          type="text"
          id="last_name"
          name="last_name"
          placeholder="Last Name"
          required
        />
      </div>

      <div class="form-group row">
        <input
          class="col-sm-12 mx-auto form-control"
          type="email"
          id="email"
          name="email"
          placeholder="Email"
          required
        />
      </div>

      <div class="form-group row">
        <input
          class="col-sm-12 mx-auto form-control"
          type="tel"
          id="phone"
          name="phone"
          placeholder="Phone (e.g., 720-123-4567) "
          pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
          required
        />
      </div>

      <div class="form-group row">
        <input
          class="col-sm-12 mx-auto form-control"
          type="txt"
          id="street"
          name="street"
          placeholder="Street"
          required
        />
      </div>

      <div class="form-group row">
        <input
          class="col-sm-4 mx-auto form-control"
          type="txt"
          id="city"
          name="city"
          placeholder="City"
          required
        />
        <input
          class="col-sm-3 mx-auto form-control"
          type="txt"
          id="state"
          name="state"
          placeholder="State"
          required
        />
        <input
          class="col-sm-3 mx-auto form-control"
          type="txt"
          id="zip"
          name="zip"
          placeholder="ZIP Code"
          pattern="[0-9]{5}"
          required
        />
      </div>

      <div class="form-buttons row">
        <button class="btn btn-primary col-sm-3 mx-auto" type="submit">
          Join
        </button>
        <button class="btn btn-secondary col-sm-3 mx-auto" type="reset">
          Reset
        </button>
      </div>
    </form>
  </div>
</div>
