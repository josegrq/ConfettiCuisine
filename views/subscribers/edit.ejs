<div class="container main-content">
  <div class="col-sm-12">
    <div class="image text-center">
      <img
        class="rounded img-fluid"
        src="http://localhost:3000/images/join.jpeg"
        alt="social gathering"
      />
    </div>
  </div>
  <br />
  <div class="col-sm-6 mx-auto text-center">
    <h1>Join our team!</h1>
    <p>Enter your information below!</p>
    <form
      action="<%= `/subscribers/${subscriber._id}/update?_method=PUT` %>"
      method="POST"
    >
      <div class="form-group row">
        <input
          class="col-sm-12 form-control mx-auto"
          type="text"
          id="first_name"
          name="first_name"
          value="<%= subscriber.name.first_name %>"
          placeholder="First Name"
          required
        />
      </div>
      <div class="form-group row">
        <input
          class="col-sm-12 form-control mx-auto"
          type="text"
          id="last_name"
          name="last_name"
          value="<%= subscriber.name.last_name %>"
          placeholder="Last Name"
          required
        />
      </div>

      <div class="form-group row">
        <input
          class="col-sm-12 mx-auto form-control"
          type="email"
          id="email"
          name="email"
          value="<%= subscriber.email %>"
          placeholder="Email"
          required
        />
      </div>

      <div class="form-group row">
        <input
          class="col-sm-12 mx-auto form-control"
          type="tel"
          id="phone"
          name="phone"
          value="<%= subscriber.phone %>"
          placeholder="Phone (e.g., 720-123-4567) "
          pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
          required
        />
      </div>

      <div class="form-group row">
        <input
          class="col-sm-12 mx-auto form-control"
          type="txt"
          id="street"
          name="street"
          value="<%= subscriber.address.street %>"
          placeholder="Street"
          required
        />
      </div>

      <div class="form-group row">
        <input
          class="col-sm-4 mx-auto form-control"
          type="txt"
          id="city"
          name="city"
          value="<%= subscriber.address.city %>"
          placeholder="City"
          required
        />
        <input
          class="col-sm-3 mx-auto form-control"
          type="txt"
          id="state"
          name="state"
          value="<%= subscriber.address.state %>"
          placeholder="State"
          required
        />
        <input
          class="col-sm-3 mx-auto form-control"
          type="txt"
          id="zip"
          name="zip"
          value="<%= subscriber.address.zip %>"
          placeholder="ZIP Code"
          pattern="[0-9]{5}"
          required
        />
      </div>

      <button class="btn btn-primary col-sm-3 mx-auto" type="submit">
        Update
      </button>
      <button class="btn btn-secondary col-sm-3 mx-auto" type="reset">
        Reset
      </button>
    </form>
  </div>
</div>
